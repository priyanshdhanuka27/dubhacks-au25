# Production Environment Configuration
NODE_ENV=production
PORT=3001

# Database Configuration
AWS_REGION=us-west-2
DYNAMODB_TABLE_PREFIX=eventsync-prod

# Authentication
JWT_SECRET=your-production-jwt-secret-key-here
JWT_REFRESH_SECRET=your-production-jwt-refresh-secret-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AWS Services
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# Bedrock Configuration
BEDROCK_REGION=us-west-2
BEDROCK_KNOWLEDGE_BASE_ID=your-knowledge-base-id
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v2:0

# OpenSearch Configuration
OPENSEARCH_ENDPOINT=https://your-opensearch-endpoint.us-west-2.aoss.amazonaws.com
OPENSEARCH_INDEX_NAME=eventsync-events

# CloudWatch Configuration
CLOUDWATCH_LOG_GROUP=/aws/lambda/eventsync-api
CLOUDWATCH_LOG_STREAM=production

# CORS Configuration
CORS_ORIGIN=https://your-production-domain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
HELMET_CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'
BCRYPT_SALT_ROUNDS=12

# Logging
LOG_LEVEL=info
LOG_FORMAT=json